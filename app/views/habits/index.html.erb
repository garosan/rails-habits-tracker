<div class="container">
  <h2>My Habits:</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th> 
        <th>Category</th>
        <th>Date</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% for habit in @habits %>
      <tr>
      <td><%= link_to(habit.title, habit_path(habit)) %></td>      
      <td><%= habit.description %></td>
      <td><%= habit.category %></td>
      <td>Date: <%= habit.date %></td>
      <td><button type="button" class="btn btn-danger"><%= link_to("Destroy", habit, method: :delete, data: { confirm: 'sure?'}) %></button></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <button type="button" class="btn btn-primary"><%= link_to("New habit", new_habit_path) %></button>
  
</div>

